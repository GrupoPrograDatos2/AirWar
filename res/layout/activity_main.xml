<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aerojasm.airwarcontroller.MainActivity">

    <Button
        android:id="@+id/Ingreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:onClick="nextLayout"
        android:text="Ingresar"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/X"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/Y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/X"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/Z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/X"
        android:layout_marginTop="71dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/fireButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Z"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/powerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Ingreso"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="190px"
        android:layout_height="180px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:onClick="fire"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/aim" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="230px"
        android:layout_height="230px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:onClick="power"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/power_up" />


</android.widget.RelativeLayout>